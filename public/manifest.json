{
  "manifest_version": 2,
  "name": "ExTweetButton",
  "version": "2.0.0",
  "description": "ページ内のTweetButtonを使ってツイートします。いちいちボタンを探す必要はありません。",
  "icons": {
    "16": "icons/icon_16.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon_19.png",
      "38": "icons/icon_38.png"
    }
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
